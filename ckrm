0,0->0,0
x,0->a,b
0,y->c,d
x,y->u,v
?u=a+c
?v=b+d
--
xx=aa+bb
yy=cc+dd
xx+yy=(a-c)^2+(b-d)^2
xx+yy=uu+vv
yy=(a-u)^2+(b-v)^2
xx=(c-u)^2+(d-v)^2
--
ac+bd=0
uu+vv=aa+cc+bb+dd+2uu+2vv-2au-2cu-2bv-2dv
--
(a+c)^2-2ac+(b+d)^2-2bd+uu+vv-2u(a+c)-2v(b+d)=0
--
(a+c)^2+(b+d)^2+uu+vv-2u(a+c)-2v(b+d)=0
--
(a+c)(a+c-u)-u(a+c-u)+(b+d)(b+d-v)-v(b+d-v)=0
--
(a+c-u)^2+(b+d-v)^2=0
